rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Fonction pour vérifier si l'utilisateur est authentifié
    function isAuthenticated() {
      return request.auth != null;
    }

    // Fonction pour vérifier si l'utilisateur est le propriétaire
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Collection users - Accès aux données utilisateur
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId);

      // Sous-collection settings pour les préférences utilisateur
      match /settings/{setting} {
        allow read, write: if isOwner(userId);
      }
    }

    // Collection userSettings - Paramètres utilisateur
    match /userSettings/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Collection viewPreferences - Préférences d'affichage
    match /viewPreferences/{preferenceId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Collection themeSettings - Paramètres du thème
    match /themeSettings/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Collection patients - Données des patients
    match /patients/{patientId} {
      allow read, write: if isAuthenticated();
    }
    
    // Collection practitioners - Données des praticiens
    match /practitioners/{practitionerId} {
      allow read, write: if isAuthenticated();
    }

    // Collection views - Vues personnalisées
    match /views/{viewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // Collection fields - Champs personnalisés
    match /fields/{fieldId} {
      allow read, write: if isAuthenticated();
    }

    // Collection categories - Catégories
    match /categories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}